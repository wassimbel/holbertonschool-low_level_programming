CC = gcc
SRC = main.c holberton.c
OBJ = $(patsubst %.c,%.o,$(SRC))
NAME = holberton
RM = rm -f
.PHONY = all clean oclean fclean re

all : $(OBJ) m.h
        $(CC) $(OBJ) -o $(NAME)
clean :
        $(RM) *~ $(NAME)
oclean :
        $(RM) $(OBJ)
fclean :
        $(RM) *~ $(NAME)
        $(RM) $(OBJ)
re : oclean all


